<%- include('header') %>  <!-- header section -->
<%- include('sidebar') %> <!-- side bar section  -->
    <!-- ==================================================Main Area========================================================= -->
    <div class="main-area">
        <div class="login-area">
            <div class="model">
                <div class="user-img">
                    <img src="images/img_avatar2.png" alt="Avatar" class="avatar">
                </div>
                <div class="form-area">
                    <form class="frm" action="" method="post">
                        <% if(flag == 1){ %>
                        <div><p style="color: green;">Password has been updated!</p></div>
                        <% }else if (flag == 2) { %>
                            <div><p style="color: red;">Password does not matched!</p></div>
                        <% } %>    
                        <div class="input-area">
                          <label for="password"><b>New Password</b></label>
                          <input type="password" placeholder="Enter New Password" name="new_password" required>
                    
                          <label for="cinfirmpassword"><b>Confirm New Password</b></label>
                          <input type="password" placeholder="Enter Confirm New Password" name="confirm_new_Password" required>
                            
                          <button type="submit">Update</button>
                        </div>
                        <div class="input-area">
                            <a href="login"><button type="button">Back To Login</button></a>
                        </div>
                      </form>
                </div>
            </div>
        </div> <!--End of login area  -->
    </div>
    <!-- ==================================================footer Area========================================================= -->
    <div class="footer-area">
      <div><h3>footer area</h3></div>
    </div>
     <!-- ==================================================End of footer Area========================================================= -->
</body>
</html>