<%- include('./header') %>  <!-- header section -->
<%- include('./admin_sidebar') %> <!-- side bar section  -->
    <!-- ==================================================Main Area========================================================= -->
    <div class="main-area">
            <h1 style="color: green; margin: .2rem; text-align: center; font-weight: bold;">City Section </h1>
            <div class="sell-area">
                <form action=""  method="post">
                  <div><p style="color: red"><%= fail %></p></div>
                  <div><p style="color: green"><%= pass %></p></div>
                  <div class="row">
                    <div class="col-25">
                        <label for="fname">States</label>
                    </div>
                    <div class="col-25">
                        <select name="state_id" class="sell_input">
                            <option>Select State</option>
                            <% if(stateData){ %>
                              <% for(ele of stateData){ %>
                              <option value="<%= ele._id %>"><%= ele.name %></option>
                            <% } } %>
                        </select>
                    </div>
                </div>
                  <div class="row">
                    <div class="col-25">
                      <label for="fname">City</label>
                    </div>
                    <div class="col-75">
                      <input type="text" class="sell_input" name="city" placeholder="Enter city name" required>
                    </div>
                  </div>
                  <div class="row">
                    <input type="submit" class="sell_submit" value="Insert">
                  </div>
                  </form>
                  <table >
                      <tr>
                          <th>S.No</th>
                          <th>State</th>
                          <th>Name</th>
                          <th>Date</th>
                      </tr>
                      <% c = 1 %>
                      <% for(city of cityData){  %>
                      <tr>
                          <td><%= c++ %></td>

                          <% for(state of stateData){ %>
                            <% if(String(city.state_id) == String(state._id)){ %>
                            <td><%= state.name %></td>
                          <% } } %>

                          <td><%= city.name %></td>
                          <td><%= moment(city.date).format('Do MMMM YYYY') %></td>
                      </tr>
                      <% } %>
                  </table>
            </div> <!--End of sell area  -->
    </div>
    <div class="footer-area">
      <div><h3>footer area</h3></div>
    </div>
     <!-- ==================================================End of footer Area========================================================= -->
</body>
</html>


<style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
      margin-top: 0.5rem;
    }
    
    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }
    
    tr:nth-child(even) {
      background-color: #dddddd;
    }
    </style>