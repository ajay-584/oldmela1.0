<%- include('../header') %>  <!-- header section -->
<%- include('./user_profile_sidebar') %> <!-- side bar section  -->
    <!-- ==================================================Main Area========================================================= -->
    <div class="main-area">
        <div class="sell-area">
          <form action=""  method="post" enctype="multipart/form-data">
            <div><p style="color: green;"><%= msg %></p></div>
            <div class="row">
              <div class="col-25">
                <label for="fname">Title/Name</label>
              </div>
              <div class="col-75">
                <input type="text" class="sell_input" id="fname" name="ads_name" placeholder="Ads name.." maxlength="100" required>
              </div>
            </div>
            <div class="row">
              <div class="col-25">
                <label for="lname">Price</label>
              </div>
              <div class="col-75">
                <input type="number" class="sell_input"  id="lname" name="ads_price" placeholder="Ads price.." maxlength="10" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" required>
              </div>
            </div>
            <div class="row">
              <div class="col-25">
                <label for="Categroies">Categroies</label>
              </div>
              <div class="col-75">
                <select class="sell_input" onchange="sellselectcat(this.value)"  name="ads_cat" required>
                  <option>Select Categroies</option>
                  <% for(x of cat_data){ %>
                    <option value="<%= x._id %>"><%= x.name %></option>
                  <% } %>
                </select>
              </div>
            </div>
            <div class="row">
              <div class="col-25">
                <label for="Sub_Categroies">Sub_Categroies</label>
              </div>
              <div class="col-75">
                <select id="sellsubcat" class="sell_input" name="sub_ads_cat">
                  <option value="">Select Sub-Categroies</option>
                </select>
              </div>
            </div>
            <div class="row">
              <div class="col-25">
                <label>Ads_Images</label>
              </div>
              <div class="col-75">
                <div class="upload_image_section">
                  <label for="image1">Image_1<input type="file" class="myFile" name="img_1" required></label>
                  <label for="image1">Image_2<input type="file" class="myFile" name="img_2"></label>
                  <label for="image1">Image_3<input type="file" class="myFile" name="img_3"></label>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-25">
                <label for="subject">Description</label>
              </div>
              <div class="col-75">
                <textarea class="sell_input"  id="dsubject" name="description" placeholder="Write ads details.." style="height:100px" maxlength="500" required></textarea>
              </div>
            </div>
            <div class="row">
              <div class="col-25">
                <label for="country">City</label>
              </div>
              <div class="col-75">
                <select class="sell_input"  name="city">
                  <% for(x of city_data){ %>
                    <option value="<%= x._id %>"><%= x.name %></option>
                  <% } %>
                </select>
              </div>
            </div>
            <div class="row">
              <div class="col-25">
                <label for="lname">Phone</label>
              </div>
              <div class="col-75">
                <input type="number" class="sell_input"  id="pname" name="phone" placeholder="Your mobile number.." maxlength="12" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" required>
              </div>
            </div>
            <div class="row">
              <div class="col-25">
                <label for="subject">Address</label>
              </div>
              <div class="col-75">
                <textarea class="sell_input"  id="asubject" name="address" placeholder="Write your contact address.." maxlength="500" style="height:70px" required></textarea>
              </div>
            </div>
            <div class="row">
              <input type="submit" class="sell_submit" value="Submit">
            </div>
            </form>
        </div> <!--End of sell area  -->
    </div>
    <!-- ==================================================footer Area========================================================= -->
    <div class="footer-area">
      <div><h3>footer area</h3></div>
    </div>
     <!-- ==================================================End of footer Area========================================================= -->
</body>
</html>