<%- include('../header') %>  <!-- header section -->
<%- include('../sidebar') %> <!-- side bar section  -->
    <!-- ==================================================Main Area========================================================= -->
    <div class="main-area">
      <div class="profile-header">
        <h1>Update Profile</h1>
        <h2>Buy & Sell anything form anywhere in Bihar India only on oldmela.com</h2>
      </div>
        <div class="sell-area">
          <form action=""  method="post" enctype="multipart/form-data">
            <div><p style="color: red"><%= fail %></p></div>
            <div><p style="color: green"><%= pass %></p></div>
            <div class="row">
              <div class="col-25">
                <label for="fname">Name</label>
              </div>
              <div class="col-75">
                <input type="text" class="sell_input" id="fname" name="user_name" value="<%= user_data.user_name %>">
              </div>
            </div>
            <div class="row">
                <div class="col-25">
                  <label for="email">Email</label>
                </div>
                <div class="col-75">
                  <input type="email" class="sell_input" id="fname" name="user_email" value="<%= user_data.user_email %>">
                </div>
              </div>
            <div class="row">
              <div class="col-25">
                <label for="lname">Mobile</label>
              </div>
              <div class="col-75">
                <input type="number" class="sell_input" readonly  id="lname" name="user_mobile" value="<%= user_data.user_mobile %>">
              </div>
            </div>
            <div class="row">
              <div class="col-25">
                <label for="subject">Address</label>
              </div>
              <div class="col-75">
                <textarea class="sell_input"  id="subject" name="user_address" placeholder="<%= user_data.user_address %>" style="height:70px"><%= user_data.user_address %></textarea>
              </div>
            </div>
            <div class="row">
              <input type="submit" class="sell_submit" value="Update">
            </div>
            </form>
        </div> <!--End of sell area  -->
    </div>
    <!-- ==================================================footer Area========================================================= -->
    <%- include('../footer') %>
     <!-- ==================================================End of footer Area======================================== -->
     </div>
</body>
</html>